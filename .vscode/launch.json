{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "urlFilter": "http://localhost:4200/*",
            "webRoot": "${workspaceFolder}/btp-frontend"
        },
        {
            "type": "node-terminal",
            "name": "Run backend",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/backend",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },        
        {
            "type": "node-terminal",
            "name": "Run scripts",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/scripts",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }, 

        {
            "type": "node-terminal",
            "name": "Run frontend",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/btp-frontend",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ],
    "compounds": [
        {
            "name": "Run pal",
            "configurations": [
                "Run backend",
                "Run scripts",
                "Run frontend"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        },
        {
            "name": "Debug pal",
            "configurations": [
                "Run backend",
                "Run scripts",
                "Run frontend",
                "Attach to Chrome"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            }
        }
    ]
}